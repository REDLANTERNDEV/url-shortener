<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Url Shortener</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
  </head>
  <body>
    <div class="container m-2">
      <h1 class="bg-red-600">Url Shortener</h1>
      <form action="/shortUrls" method="POST" class="my-4 form-inline row">
        <label class="visually-hidden" for="fullUrl">Url</label>
        <input
          required
          class="form-control col mr-2"
          placeholder="Url"
          type="url"
          name="fullUrl"
          id="fullUrl"
        />
        <button class="btn btn-success my-2 w-24" type="submit">Shrink</button>
      </form>

      <div class="table-responsive">
        <table
          class="table table-striped table-dark shadow-lg p-3 mb-5 bg-body rounded"
        >
          <thead>
            <tr>
              <th>Full Url</th>
              <th>Short Url</th>
              <th>Clicks Url</th>
            </tr>
          </thead>
          <tbody>
            <% shortUrls.forEach(shortUrl => { %>
            <tr>
              <td>
                <a target="_blank" href="<%= shortUrl.full %>"
                  ><%= shortUrl.full %></a
                >
              </td>
              <td>
                <a target="_blank" href="<%= shortUrl.short %>"
                  ><%= shortUrl.short %></a
                >
              </td>
              <td><%= shortUrl.clicks %></td>
            </tr>

            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
